[DXR]
enabled_plugins     = pygmentize clang
temp_folder         = PWD/temp
target_folder       = PWD/target
nb_jobs             = 4
es_index            = dxr_test_{format}_{tree}_{unique}
es_alias            = dxr_test_{format}_{tree}

[code]
source_folder       = PWD/code
object_folder       = PWD/code
build_command       = make clean; make -j $jobs
description         = An awesome tree

[code2]
source_folder       = PWD/code2
object_folder       = PWD/code2
build_command       = make clean; make -j $jobs
description         = A tree that's twice as awesome
